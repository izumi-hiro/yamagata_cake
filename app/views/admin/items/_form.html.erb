<%= form_with model: item do |f| %>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">商品画像</label>
          <div class="col-md-9">
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">商品名</label>
          <div class="col-md-9">
            <%= f.text_field :name, placeholder: "商品名", class: 'form-control item_name' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">商品説明</label>
          <div class="col-md-9">
            <%= f.text_area :introduction, size: "100x5", placeholder: "ここに説明文を記述します", class: 'form-control item_introduction' %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">ジャンル</label>
          <div class="col-md-9">
            <div class="box">
              <select>
                <option value="1">ジャンルA</option>
                <option value="2">ジャンルB</option>
                <option value="3">ジャンルC</option>
                <option value="4">ジャンルD</option>
               </select>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-3 col-form-label">税抜価格</label>
          <div class="col-md-9">
            <%= f.text_field :tax_excluded_price, placeholder: "1000", class: 'form-control item_tax_excluded_price' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :販売ステータス %>
          <%= f.radio_button :sales_status, "sale" %>
          <%= f.label :sales_status, "販売中" %>
          <%= f.radio_button :sales_status, "stop_selling" %>
          <%= f.label :sales_status, "販売停止中" %>
        </div>
        <div class="form-group" align="center">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>